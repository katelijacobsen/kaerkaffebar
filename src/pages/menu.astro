              </article>
              <section>
                <h4 class="text-neutral-1 text-paragraph-2">
                  <strong>{t("Tilføj")}</strong>
                </h4>
                <ul>
                  <AddItem item={t("Pålægschokolade 12 kr")} />
                  <AddItem item={t("Tunsalat 20 kr")} />
                  <AddItem item={t("Croissant 20 kr")} />
                </ul>
              </section>
            </section>
          </section>
          <div class="grid gap-extra-large md:gap-negative">
            <section class="grid gap-default" id="vafler">
              <div class="grid justify-center gap-default md:justify-start md:gap-medium">
                <CategoryHeadline headline={t("Vafler")} />
              </div>
              <ul class="grid gap-medium">
                <li>
                  <ProductHeadline variant="primary" headline={t("Valnødder")} price={t("85 kr")} />
                  <Description content={t("2 kærlighedsvafler med valnøddecremeost, brombærkompot, valnødder og skovsyre")} />
                </li>
                <li>
                  <ProductHeadline variant="primary" headline={t("Yoghurt og bær")} price={t("45 kr")} />
