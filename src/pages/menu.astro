                <li>
                  <ProductHeadline variant="primary" headline={t("Falafel bowl")} price={t("109 kr")} />
                  <Description content={t("Varm rødbedefalafel, avokado, salat, agurk, persilleolie, sesam og hummus")} />
                </li>
              </ul>
            </section>
