              <div class="grid justify-center md:justify-start">
                <TimeSlot time={t("Fra kl. 10")} />
              </div>
            </header>
            <div class="grid gap-medium">
              <div>
                <ProductHeadline variant="primary" headline={t("Avocadomad")} price={t("90 kr")} />
